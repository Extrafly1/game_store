<p style="color: green"><%= notice %></p>

<% content_for :title, "Games" %>

<h1>Games</h1>

<div id="section5">
  <table id="board">
    <thead>
      <tr class="cell revealed">
        <th>Game Name</th>
        <th>Price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @games.each do |game| %>
        <tr class="cell">
          <td><%= game.game_name %></td>
          <td><%= number_to_currency(game.price) %></td>
          <td>
            <%= link_to 'Show', game_path(game), class: 'btn' %>
            <%= link_to 'Edit', edit_game_path(game), class: 'btn' %>
            <%= link_to 'Delete', game_path(game), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

