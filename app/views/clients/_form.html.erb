<%= form_with(model: client) do |form| %>
  <% if client.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h2>

      <ul>
        <% client.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
    <% if client.errors[:name].any? %>
      <div style="color: red"><%= client.errors[:name].first %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
    <% if client.errors[:email].any? %>
      <div style="color: red"><%= client.errors[:email].first %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :balance %>
    <%= form.number_field :balance %>
    <% if client.errors[:balance].any? %>
      <div style="color: red"><%= client.errors[:balance].first %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>  <!-- поле для пароля -->
    <% if client.errors[:password].any? %>
      <div style="color: red"><%= client.errors[:password].first %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
